{
  "name": "deal-bot",
  "version": "0.0.1",
  "description": "A simple deal bot for Synapse storage providers",
  "author": "",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "setup": "pnpm install && pnpm -C web install",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "check": "biome check --write .",
    "check:ci": "biome ci .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./test/vitest-e2e.config.ts",
    "dev:web": "pnpm -C web dev",
    "build:web": "pnpm -C web build"
  },
  "dependencies": {
    "@filoz/synapse-sdk": "0.36.0",
    "@ipld/car": "^5.4.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.5",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.5",
    "@nestjs/platform-express": "^11.1.5",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.11.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cron": "^4.3.0",
    "ethers": "^6.15.0",
    "helmet": "^8.1.0",
    "https-proxy-agent": "^7.0.6",
    "joi": "^17.13.3",
    "multiformats": "^13.4.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socks-proxy-agent": "^8.0.5",
    "typeorm": "^0.3.25",
    "undici": "^7.16.0",
    "viem": "^2.38.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.1",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/core": "^1.15.3",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.15",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "unplugin-swc": "^1.5.9",
    "vitest": "^4.0.15"
  }
}
